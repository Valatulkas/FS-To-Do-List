<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mt-4">To Do List</h1>
        <div class='my-4 text-center'>
          <form id="create-task" class='mb-4'>
            <input  id="new-task-content" type="text" placeholder="new task" required/>
            <button class='btn-default'>Create</button>
          </form>
          <div class="toggle-section mt-3">
            <button id='all' class="btn-category btn-primary rounded all">All Tasks</button>
            <button id='active' class="btn-category btn-warning rounded mx-3">Active</button>
            <button id='completed' class="btn-category btn-success rounded">Completed</button>
          </div>
        </div>
      <div class="row" id="tasks"></div>
    </div>
  </div>
</div>